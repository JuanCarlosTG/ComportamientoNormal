<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ComportamientoNormal">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="250sp"
        android:id="@+id/ll_data">
    </ListView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_data">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/hsv_histo">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ll_data"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200sp"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="wrap_content"
                                android:background="#123456"
                                android:id="@+id/v_1"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="wrap_content"
                                android:background="#678912"
                                android:id="@+id/v_2"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="wrap_content"
                                android:background="#123456"
                                android:id="@+id/v_3"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="wrap_content"
                                android:background="#678912"
                                android:id="@+id/v_4"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="10sp"
                                android:background="#123456"
                                android:id="@+id/v_5"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="7sp"
                                android:background="#678912"
                                android:id="@+id/v_6"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="5sp"
                                android:background="#123456"
                                android:id="@+id/v_7"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="5sp"
                                android:background="#678912"
                                android:id="@+id/v_8"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="0sp"
                                android:background="#123456"
                                android:id="@+id/v_9"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="60sp"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="60sp"
                                android:layout_height="2sp"
                                android:background="#678912"
                                android:id="@+id/v_10"
                                android:layout_alignParentBottom="true">
                            </View>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30sp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_1"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#987654"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_2"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#765466"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_3"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#987654"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_4"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#765466"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_5"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#987654"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_6"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#765466"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_7"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#987654"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_8"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#765466"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_9"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#987654"/>

                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_10"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#765466"/>
                        <TextView
                            android:layout_width="60sp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:id="@+id/tv_11"
                            android:textColor="#ffffff"
                            android:gravity="center"
                            android:background="#987654"/>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>


        </LinearLayout>


    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/tv_med"
        android:text="Media"
        android:textSize="20sp"/>


</RelativeLayout>
